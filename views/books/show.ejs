<h2><%= book.title %></h2>
<a href="/books/<%= book.id %>">
  <img width="100px" height="150px" src="<%= book.coverImagePath %>" alt="A book cover image">
</a>
<div>
  <h4>Author: <%= book.author.name %></h4>
</div>
<div>
  <h4>Publish Date: <%= book.publishDate.toDateString() %></h4>
</div>
<div>
  <h4>Page Count: <%= book.pageCount %></h4>
</div>
<div>
  <h4>Description: <%= book.description %></h4>
</div>

<button><a href="/books/<%= book.id %>/edit">Edit</a></button>
<%- include('../partials/deleteForm', { url: `/books/${book.id}` }) %> 
<button><a href="/authors/<%= book.author.id %>">View Author</a></button>